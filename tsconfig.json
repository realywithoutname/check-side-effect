{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false,
    "lib": ["esnext"],
    "outDir": "lib",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  }
}
